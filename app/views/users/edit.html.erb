<div class="container">
  <h2 class="text-center my-5">ユーザー編集</h2>
  <div class="row">
    <div class="col-8 offset-2 mb-5">
      <%= form_with model: @user, url: users_path, local: true do |f| %>
      <table>
        <tr>
          <div class="form-group">
            <%= f.label :アイコン, class:"form_label"%>
            <%= f.attachment_field :image,class:"mb-3 ml-3"%>
          </div>
        </tr>
        <tr>
          <div class="form-group">
            <%= f.label :ユーザー名, class:"form_label" %>
            <%= f.text_field :name, placeholder:"ユーザー名",class:"form-control mb-3" %>
          </div>
        </tr>
        <tr>
          <div class="form-group">
            <%= f.label :メールアドレス, class:"form_label" %>
            <%= f.text_field :email, placeholder:"メールアドレス",class:"form-control mb-3" %>
          </div>
        </tr>
        <tr>
          <div class="form-group">
            <%= f.label :最近のお気に入り, class:"form_label" %>
            <%= f.text_area :email, size: "50x5", placeholder:"最近のお気に入り",class:"form-control form-control-lg mb-3" %>
          </div>
        </tr>
        <tr>
          <div class="form-action d-flex justify-content-around">
            <%= f.submit "変更を保存", class:"btn btn-success" %>
            <%= link_to "マイページへ戻る",users_path, class:"btn btn-outline-secondary" %>
          </div>
        </tr>
      <% end %>
      </table>
    </div>
  </div>
</div>